- container = @no_breadcrumb_container ? 'container-fluid' : container_class
- hide_top_links = @hide_top_links || false

%nav.breadcrumbs{ role: "navigation", class: [container, @content_class] }
  .breadcrumbs-container{ class: ("border-bottom-0" if @no_breadcrumb_border) }
    - if defined?(@left_sidebar)
      = button_tag class: 'toggle-mobile-nav', type: 'button' do
        %span.sr-only= _("Open sidebar")
        = sprite_icon('hamburger')
    .breadcrumbs-links.js-title-container{ data: { qa_selector: 'breadcrumb_links_content' } }
      %ul.list-unstyled.breadcrumbs-list.js-breadcrumbs-list{ itemscope: true, itemtype: 'https://schema.org/BreadcrumbList' }
        - unless hide_top_links
          = header_title
        - if @breadcrumbs_extra_links
          - @breadcrumbs_extra_links.each do |extra|
            = breadcrumb_list_item link_to(extra[:text], extra[:link])
        = render "layouts/nav/breadcrumbs/collapsed_dropdown", location: :after
        %li{ itemprop: 'itemListElement', itemscope: true, itemtype: 'https://schema.org/ListItem' }
          %h2.breadcrumbs-sub-title
            = link_to breadcrumb_title_link, itemprop: 'item' do
              %span{ itemprop: 'name' }= @breadcrumb_title
    = yield :header_content
