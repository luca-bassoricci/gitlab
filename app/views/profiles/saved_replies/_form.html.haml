- edit = local_assigns.fetch(:edit, false)
- form_path = edit ? profile_saved_reply_path(@saved_reply) : profile_saved_replies_path

- if @saved_reply.errors.present?
  .gl-alert.gl-alert-danger.gl-mb-5
    = sprite_icon('error', size: 16, css_class: 'gl-icon gl-alert-icon gl-alert-icon-no-title')
    .gl-alert-body
      - @saved_reply.errors.full_messages.each do |error|
        = error

= form_for @saved_reply, url: form_path, html: { class: 'common-note-form js-quick-submit js-requires-input js-saved-reply-form' } do |f|
  .form-group
    = f.label :title, _('Title')
    = f.text_field :title, class: 'form-control', autofocus: true, required: true, placeholder: _('Saved reply title')
  .form-group
    = f.label :note, _('Note')
    = render layout: 'shared/md_preview', locals: { url: preview_markdown_profile_saved_replies_path } do
      = render 'shared/zen', f: f, attr: :note, classes: 'note-textarea', placeholder: _('Write saved reply...')
  .gl-mt-3
    = f.submit _('Save'), class: 'btn gl-button btn-success'
